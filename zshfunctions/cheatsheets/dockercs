clear
print 'BUILD--------'
print 'docker build -t myapp:1.0 .	Build image and tag it'
print 'docker images			List images'
print 'docker rmi alpine:3.4		Delete a local image'
print 'docker rm infinite		Remove container'
print ''
print 'RUN----------'
print 'docker ps			List running containers'
print 'docker ps			List all containers'
print 'docker stop web			Stop a running container'
print 'docker start web 		Start a container'
print 'docker restart web 		Restart a container'
print 'docker rm -f $(docker ps -aq)	Delete running and stopped containers'
print 'docker exec -it web bash 	Shell into the container'
print 'docker logs --tail 100 web	Print containers logs'
print 'docker run'
print ' 	--rm remove container after exit'
print ' 	-it connect container to terminal'
print ' 	--name web name the container'
print ' 	-p 5000:80 assign external:internal port'
print ' 	-v~/dev:/code map host to container volume'
print ' 	alpine:3.4 the image to use'
print ' 	/bin/sh the command to run in the container'
print ''
print 'https://medium.com/statuscode/dockercheatsheet-9730ce03630d'
